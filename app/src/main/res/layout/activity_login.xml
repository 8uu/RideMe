<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/vv"
    tools:context=".LoginActivity">
    <EditText
        android:id="@+id/Loginnumber"
        android:layout_width="343dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="number"
        android:textColorHint="#F7FBFB"
        android:textColor="#F7FBFB"
        android:hint="Phone number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.386" />

    <Button
        android:id="@+id/loginCanselbtn"
        android:layout_width="405dp"
        android:layout_height="55dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Button
        android:id="@+id/Loginbtn"
        android:layout_width="405dp"
        android:layout_height="55dp"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.874" />

    <EditText
        android:id="@+id/LoginPassword"
        android:layout_width="343dp"
        android:layout_height="56dp"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="#F7FBFB"
        android:textColor="#F7FBFB"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.544" />


    <RadioGroup
        android:id="@+id/Lradiogrop"
        android:layout_width="315dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046">

        <RadioButton
            android:id="@+id/LCusradioBtn"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:text="Customer"
            android:textColor="#F7FBFB"

            android:checked="true"/>

        <RadioButton
            android:id="@+id/LDradioBtn"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:textColor="#F7FBFB"
            android:text="Driver" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>